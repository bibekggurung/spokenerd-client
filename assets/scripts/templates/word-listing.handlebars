{{#each words as |word|}}
  {{log word}}
  <div class="container">
    <div class="row">
      <div class="col-lg">
        {{log word}}
          <div class="flip-card">
            <div class="flip-card-inner">
              <div class="flip-card-front">
                <section data-id="{{word.id}}">
                  <h6>Word:</h6>
                  <h3>
                    {{limit word.form 15}}
                  </h3>
              </div>
              </section>
              <div class="flip-card-back">
                <section data-id="{{word.id}}">
                  <h6>ID:</h6>
                  <p>
                    {{#if word.id}}
                      {{word.id}}
                    {{else}}
                      No id provided.
                    {{/if}}
                  </p>
                  <h6>Definition:</h6>
                  <p>
                    {{#if word.definition}}
                      {{word.definition}}
                    {{else}}
                      No definition provided.
                    {{/if}}
                  </p>
                  <h6>Part of Speech:</h6>
                  <p>
                    {{#if word.part_of_speech}}
                      {{word.part_of_speech}}
                    {{else}}
                      No part of speech provided.
                    {{/if}}
                  </p>
                  <h6>Origin Language:</h6>
                  <p>
                    {{#if word.origin_lang}}
                      {{word.origin_lang}}
                    {{else}}
                      No origin language provided.
                    {{/if}}
                  </p>
                  <button type="click" class="btn btn-danger delete-word" data-id="{{word.id}}">Delete</button>
                </section>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{/each}}
